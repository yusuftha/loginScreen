<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/facebook"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginBottom="@dimen/margin_4xlarge"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/facebook" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/margin_4xlarge">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxlarge"
            android:background="@android:color/white"
            android:hint="@string/txt_email_edit_text"
            android:inputType="textEmailAddress"
            android:padding="@dimen/margin_5xlarge"
            android:textColor="@color/tintColor"
            android:textColorHint="@color/tintColor"
            android:textSize="@dimen/text_xlarge"
            app:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxlarge"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:hint="@string/txt_password_edit_text"
            android:inputType="textPassword"
            android:padding="@dimen/margin_5xlarge"
            android:textColor="@color/tintColor"
            android:textColorHint="@color/tintColor"
            android:textSize="@dimen/text_xlarge" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_marginTop="@dimen/margin_5xlarge"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/txt_login_button_text"
            android:textAllCaps="false"
            android:textSize="@dimen/text_xlarge" />
    </LinearLayout>


</LinearLayout>
